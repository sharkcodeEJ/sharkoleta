// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id     Int         @id
  title  String
  image  String
  points PointItem[]
}

model Point {
  id          String      @id @db.Uuid
  name        String
  email       String
  description String
  whatsapp    String
  fone        String
  latitude    Decimal
  longitude   Decimal
  city        String
  uf          String
  address     String
  district    String
  number      Int
  cep         String
  image       String
  itens       PointItem[]
}

model PointItem {
  point   Point  @relation(fields: [pointId], references: [id])
  item    Item   @relation(fields: [itemId], references: [id])
  pointId String @db.Uuid
  itemId  Int

  @@id([pointId, itemId])
}
